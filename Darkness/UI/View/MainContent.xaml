<UserControl x:Class="Darkness.UI.View.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Darkness.UI.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel Name="WindowCaption" Grid.Row="0" Height="40">
            <Image Name="WindowCaptionIcon" DockPanel.Dock="Left" Width="40" Height="40" Source="/Darkness;component/Icons/freebsd_start_here_folder_icon.png" />
            <Label Name="WindowTitle" DockPanel.Dock="Left" FontSize="27" Content="Darkness" />
        </DockPanel>
        <local:ApplicationFrame x:Name="WindowContentFrame" Grid.Row="1" />
    </Grid>
</UserControl>
